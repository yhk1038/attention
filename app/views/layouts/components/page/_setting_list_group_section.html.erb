<div class="card">
  <div class="card-header">
    <h4><%= title %></h4>
    <% if option.dig(:submit) %>
      <button type="submit" class="btn btn-styled btn-sm"><i class="fas fa-save mr-1"></i> Save</button>
    <% end %>
  </div>

  <ul class="list-group list-group-flush">
    <%= yield %>
  </ul>
</div>
