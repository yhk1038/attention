<%= page_heading "Users (#{@users.count})" do %>
  <div class="dropdown">
    <%= link_to '#', class: 'btn btn-sm btn-styled', role: 'button', data: { toggle: 'dropdown' } do %>
      <i class="fas fa-plus-circle mr-1"></i>
      Invite Organization User
    <% end %>

    <div class="dropdown-menu dropdown-menu-right" style="min-width: 300px;">
      <%= simple_form_for(@new_user, as: :invitee, url: invite_organization_users_path(@organization), html: { class: 'px-4 py-3' }) do |f| %>
        <%= f.input :first_name, required: true, input_html: { placeholder: current_user.first_name } %>
        <%= f.input :last_name, required: true, input_html: { placeholder: current_user.last_name } %>
        <%= f.input :email, required: true, input_html: { autocomplete: "email", placeholder: current_user.email } %>
        <%= f.button :submit, 'Send Invite Email', class: 'btn btn-primary w-100 text-nowrap' %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="notification-list-wrapper page-padding container-fluid mt-3">
  <div class="card">
    <div class="card-header d-flex" style="justify-content: space-between">
      <div class="w-50 mr-auto"></div>
      <div class="d-flex align-items-stretch align-items-center">
        <div class="text-center" style="width: 200px">Notifications</div>
        <div class="text-center" style="width: 100px">Comments</div>
        <div class="text-center" style="width: 100px">Role</div>
        <div class="text-center" style="width: 200px">Actions</div>
      </div>
    </div>
    <ul class="notification-list list-group list-group-flush">
      <%= render partial: 'user-entry', collection: @users, as: :user %>
    </ul>
  </div>
</div>
